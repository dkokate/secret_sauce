<%=provide(:title,'Edit recipe')%>
<h1>Edit Recipe</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@recipe, :html => { :class => 'form-horizontal' }) do |f| %>
      
      <%= f.input :name %>
      
      <%= f.input :instructions %>
      
      <%= f.input :total_calories %>	

      <%= f.button :submit, "Update & Publish", class: " offset3 input-prepend add-on btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>
