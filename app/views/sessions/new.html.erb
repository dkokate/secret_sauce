<%=provide(:title,'Sign in')%>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3 well">
    <%= form_for(:session, url: sessions_path, :html => { :class => 'form-horizontal' }) do |f| %>
      
      <div class="center">
        
        <div class="control-group input-prepend">
          <span class="add-on"><i class="icon-envelope icon-black"></i></span>
          <%= f.text_field :email, placeholder: "Email", maxlength: "50"  %>
        </div>
    
        <div class="control-group input-prepend">
          <span class="add-on"><i class="icon-cog icon-black"></i></span>
          <%= f.password_field :password, placeholder: "Password", maxlength: "50"  %>
        </div>  
      </div>

      <div class="center">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
        &nbsp&nbsp<%= f.button "Cancel", name: 'Cancel', class: "btn" %>
        &nbsp&nbsp<%= link_to("forgot password?", new_password_reset_path ) %>
      </div>
      <div class="center">
        <%= f.label :remember_me, :class => "checkbox inline" do %>
          <%= f.check_box :remember_me %> Remember me
        <% end %>
      </div>
      <div class="center">
        New User?&nbsp<%= link_to("Sign up", signup_path) %>
      </div>  
    <% end %>
  </div>
</div>
