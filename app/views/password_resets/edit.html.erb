<%=provide(:title,'Reset Password')%>
<h1>Reset Password</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@user, :url => url_for(:controller => 'password_resets', :action => 'update'),
        :method => 'patch', :html => { :class => 'form-horizontal' }) do |f| %>
      
      <%= f.input :password, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
             <i class="icon-cog icon-black"></i>
          <% end %>
          <%= f.input_field :password, placeholder: "Password", maxlength: "50" %>	
      <% end %>	

      <%= f.input :password_confirmation, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
             <i class="icon-repeat icon-black"></i>
          <% end %>
          <%= f.input_field :password_confirmation, placeholder: "Confirm Password", maxlength: "50" %>	
      <% end %>

      <%= f.button :submit, "Update Password", class: " offset3 input-prepend add-on btn btn-primary" %>
      
    <% end %>
  </div>
</div>

