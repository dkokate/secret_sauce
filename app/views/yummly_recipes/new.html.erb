<%=provide(:title,'Search recipe')%>
<h1>Search for Secret Recipes</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(:yummly_recipe, :url => url_for(:controller => 'yummly_recipes', :action => 'index'),
        :method => 'get', :html => { :class => 'form-horizontal' }) do |f| %>
      
      <%= f.input :containing %>	

      <%= f.button :submit, "Search", class: " offset3 input-prepend add-on btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>
