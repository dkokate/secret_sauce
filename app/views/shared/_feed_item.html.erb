<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user%>
  </span>
  <span class="content"><%= link_to feed_item.name, feed_item %></span>
  <span class="timestamp">
    Published <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
</li>