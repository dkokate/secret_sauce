<%=provide(:title,'Edit profile')%>
<h1>Update your profile</h1>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user%>
        <%= @user.name %>
      </h1>
      <%= link_to 'change picture', "http://gravatar.com/emails", id: "gravatar_link", target: '_blank' %>
    </section>
  </aside>
</div>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
      
      <%= f.input :name, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
            <i class="icon-user icon-black"></i>
          <% end %>
          <%= f.input_field :name, placeholder: "Name", maxlength: "50" %>
      <% end %>
      
      <%= f.input :email, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
             <i class="icon-envelope icon-black"></i>
          <% end %>
          <%= f.input_field :email, placeholder: "Email", maxlength: "50" %>
      <% end %>
      
      <%= f.input :password, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
             <i class="icon-cog icon-black"></i>
          <% end %>
          <%= f.input_field :password, placeholder: "Password", maxlength: "50" %>	
      <% end %>	

      <%= f.input :password_confirmation, :wrapper => :prepend, :label => false do %>
          <%= content_tag :span, :class => "input-prepend add-on" do %>
             <i class="icon-repeat icon-black"></i>
          <% end %>
          <%= f.input_field :password_confirmation, placeholder: "Confirm Password", maxlength: "50" %>	
      <% end %>

      <%= f.button :submit, "Save changes", class: " offset3 input-prepend add-on btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>

